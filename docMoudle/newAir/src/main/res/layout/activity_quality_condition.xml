<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".statistic.QualityConditionActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/common_blue_tablayout"/>

    <RadioGroup
        android:id="@+id/rlQuality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbStatistic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/radio_button_bg"
            android:button="@null"
            android:checked="true"
            android:paddingTop="19dp"
            android:paddingBottom="19.5dp"
            android:text="@string/quality_statistic"
            android:textColor="@color/selectedText"
            android:textStyle="bold"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rbCompare"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/radio_button_bg"
            android:button="@null"
            android:text="@string/quality_compare"
            android:textColor="@color/unSelectedText"
            android:textStyle="bold"
            android:textSize="15sp"
            />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/analysisContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>