<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView  android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_btn_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/commonBlueColor"
        android:textSize="20sp"
        android:background="@drawable/common_delete_blue_bg"
        android:layout_marginBottom="@dimen/common_page_divider"
        android:text="@string/cancel">
    </TextView>

    <TextView android:id="@+id/okBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_btn_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/common_ok_bg_selector"
        android:layout_marginBottom="@dimen/common_page_padding"
        android:text="@string/confirm">
    </TextView>

</LinearLayout>
