<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:id="@+id/cityName"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:paddingLeft="@dimen/common_bg_with_page"
        android:textColor="@color/commonTextColor">
    </TextView>
    <ImageView
        android:id="@+id/selectView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selected_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/common_bg_with_page"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/cityName"
        android:background="@color/common_gray_line_color"></View>
</RelativeLayout>
